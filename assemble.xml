<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>total</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>env</directory>
            <outputDirectory>${plugin.name}/env</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>account/target</directory>
            <outputDirectory>${plugin.name}/account/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*docker-info.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>account</directory>
            <outputDirectory>${plugin.name}/account/</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>gateway/target</directory>
            <outputDirectory>${plugin.name}/gateway/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*docker-info.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>gateway</directory>
            <outputDirectory>${plugin.name}/gateway/</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>oauthserver/target</directory>
            <outputDirectory>${plugin.name}/oauthserver/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*docker-info.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>oauthserver</directory>
            <outputDirectory>${plugin.name}/oauthserver/</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>docker-compose.yml</source>
            <outputDirectory>${plugin.name}</outputDirectory>
        </file>
    </files>
</assembly>